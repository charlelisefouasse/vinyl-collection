generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id           String   @id
  name         String
  image        String
  release_date String
  artists      Artist[] @relation("AlbumArtists")
  genres       String[]
  variant      String?
}

model Artist {
  id     String  @id
  name   String
  albums Album[] @relation("AlbumArtists")
}
